VER=1.9.2
APP=pages_navigation

if rvm list strings | grep -q "${VER}" ; then

  # Load or create the specified environment
  if [[ -d "${rvm_path:-$HOME/.rvm}/environments" \
    && -s "${rvm_path:-$HOME/.rvm}/environments/${VER}@${APP}" ]] ; then
    \. "${rvm_path:-$HOME/.rvm}/environments/${VER}@${APP}"
  else
    rvm --create  "${VER}@${APP}"
  fi

  (
  if ! command -v bundle ; then
    gem install bundler
  fi
  )&

else

  # Notify the user to install the desired interpreter before proceeding.
  echo "${VER} was not found, please run 'rvm install ${VER}' and then cd back into the project directory."

fi
